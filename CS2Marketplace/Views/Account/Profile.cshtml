@model CS2Marketplace.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<h2>My Profile</h2>

<div class="card" style="max-width: 400px;">
    <div class="card-body">
        <h4 class="card-title">@Model.Username</h4>
        <p>
            <img src="@Model.AvatarUrl" alt="Avatar" style="width:100px;" />
        </p>
        <p>Steam ID: @Model.SteamId</p>
        <p>Balance: @Model.Balance.ToString("C")</p>
        <p>Last Login: @Model.LastLogin</p>
    </div>
</div>
