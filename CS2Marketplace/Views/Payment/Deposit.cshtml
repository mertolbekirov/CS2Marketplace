@{
    ViewData["Title"] = "Deposit Funds";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h2>Deposit Funds</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h4>Deposit Information</h4>
                        <p>Your deposit will be processed securely through Stripe. You can use any major credit card or bank account.</p>
                    </div>

                    <form asp-action="Deposit" method="post">
                        <div class="form-group">
                            <label for="amount">Amount (EUR)</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">€</span>
                                </div>
                                <input type="number" 
                                       class="form-control" 
                                       id="amount" 
                                       name="amount" 
                                       min="1" 
                                       max="10000" 
                                       step="0.01" 
                                       required>
                            </div>
                            <small class="form-text text-muted">Minimum: €1.00, Maximum: €10,000.00</small>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">
                                Continue to Payment
                            </button>
                        </div>
                    </form>

                    <div class="mt-4">
                        <h4>Why deposit?</h4>
                        <ul>
                            <li>Purchase items from other users</li>
                            <li>Pay for marketplace services</li>
                            <li>Fund your trading activities</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
