@{
    ViewData["Title"] = "Deposit Funds";
}

<h2>Deposit Funds</h2>

<form asp-controller="Payment" asp-action="Deposit" method="post" class="form-inline">
    <div class="form-group mb-2">
        <label for="amount" class="mr-2">Amount:</label>
        <input type="number" step="0.01" name="amount" id="amount" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mb-2 ml-2">Deposit</button>
</form>
